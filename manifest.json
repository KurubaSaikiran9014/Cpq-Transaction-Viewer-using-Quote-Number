{
  "manifest_version": 3, 
  "name": "CPQ Transaction Viewer ",
  "version": "1.0",
  "description": "Enter quote Number to view CPQ transaction quotes And XML Files in Google Chrome",
    "permissions": [
      "tabs","scripting"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.bigmachines.com/*"
        ],
        "js":["index.js"]
      }
    ],
    "icons": {
      "48": "logo.png",  
      "128": "logo.png"  
    },
    "action":{
      "default_popup":"popup/popup.html",
      "default_icon":"logo.png" 
       },
       "host_permissions":["*://*.bigmachines.com/*"]
       
}
 

